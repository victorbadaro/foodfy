{% extends "admin/layout.njk" %}

{% block content %}
<h2 class="text-title">Gerenciar chefs</h2>
<section class="chefs">
    {% for chef in chefs %}
    <div class="chef">
        <div class="chef-img" style="background-image: url('{{ chef.avatar_url }}')"></div>
        <div>
            <p class="chef-name">{{ chef.name }}</p>
            <a href="/admin/chefs/{{ chef.id }}" class="chef-link">Visualizar</a>
        </div>
    </div>
    {% endfor %}
</section>
{% endblock content %}