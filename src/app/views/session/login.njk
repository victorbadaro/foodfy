{% extends "session/layout.njk" %}

{% block content %}
    <div class="logo">
        <a href="/home">
            <img src="/img/logo.png" alt="Logo">
        </a>
    </div>
    <div class="login-container">
        <h2>Iniciar SessÃ£o</h2>
        <form method="POST" action="/login">
            <div class="form-item">
                <label for="email">Email</label>
                <input
                    {% if fields_error.email %}
                        class="field-error"
                    {% endif %}
                    type="email" name="email"
                    id="email"
                    placeholder="Digite seu email"
                    value="{{ user.email }}"
                    required
                >
            </div>
            <div class="form-item">
                <label for="password">Senha</label>
                <input
                    {% if fields_error.password %}
                        class="field-error"
                    {% endif %}
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Digite sua senha"
                    required
                >
            </div>

            <div class="form-footer">
                <a href="/forgot-password">Perdeu a senha?</a>
                <button class="button">Acessar</button>
            </div>
        </form>
    </div>
{% endblock content %}