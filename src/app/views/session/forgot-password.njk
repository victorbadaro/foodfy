{% extends "session/layout.njk" %}

{% block title %}
    <title>Foodfy - Esqueceu a Senha?</title>
{% endblock title %}

{% block content %}
    <div class="logo">
        <a href="/home">
            <img src="/img/logo.png" alt="Logo">
        </a>
    </div>
    <div class="forgot-password-container">
        <h2>Esqueceu a Senha?</h2>
        <form method="POST" action="/forgot-password">
            <div class="form-item">
                <label for="email">Email</label>
                <input
                    {% if fields_error.email %}
                        class="field-error"
                    {% endif %}
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Digite teu email para recuperar tua senha"
                    value="{{ user.email }}"
                    required
                >
            </div>

            <div class="form-footer">
                <button class="button">Recuperar</button>
            </div>
        </form>
    </div>
{% endblock content %}