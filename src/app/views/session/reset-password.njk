{% extends "session/layout.njk" %}

{% block title %}
    <title>Foodfy - Nova Senha</title>
{% endblock title %}

{% block content %}
    <div class="logo">
        <a href="/home">
            <img src="/img/logo.png" alt="Logo">
        </a>
    </div>
    <div class="reset-password-container">
        <h2>Nova Senha</h2>
        <form method="POST" action="/reset-password">
            <input type="hidden" name="reset_token" value="{{ user.reset_token }}">
            <div class="form-item">
                <label for="email">Email</label>
                <input
                    {% if fields_error.email %}
                        class="field-error"
                    {% endif %}
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Digite seu email"
                    value="{{ user.email }}"
                    required
                >
            </div>
            <div class="form-item">
                <label for="password">Nova senha</label>
                <input
                    {% if fields_error.password %}
                        class="field-error"
                    {% endif %}
                    type="password"
                    name="password"
                    id="password"
                    placeholder="Digite sua nova senha"
                    value="{{ user.password }}"
                    required
                >
            </div>
            <div class="form-item">
                <label for="passwordConfirmation">Repetir senha</label>
                <input
                    {% if fields_error.passwordConfirmation %}
                        class="field-error"
                    {% endif %}
                    type="password"
                    name="passwordConfirmation"
                    id="passwordConfirmation"
                    placeholder="Repita a nova senha"
                    value="{{ user.passwordConfirmation }}"
                    required
                >
            </div>

            <div class="form-footer">
                <button class="button">Nova Senha</button>
            </div>
        </form>
    </div>
{% endblock content %}